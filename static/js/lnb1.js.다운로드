$(document).ready(function(){
	var $window=$(window);
	var $body=$('body');
	var $lnb=$('#lnb');
	var $gnb=$('#gnb');
	var $bg=$('#lnb_bg');
	var $li=$lnb.find('.depth1 > li'); 
	var $sub=$lnb.find('.depth2');
	var $lnb_btn=$('#lnb_btn2 , .close, #lnb_mask, .close_btn');
	var winWidth=$window.width();
	var current=0;
	var speed=200;
  var subHeight=$sub.find('ul').height();
  var mo_lnbHeight=$lnb.height();
	var inflection=1220;
	var scrollTop=0;



	//scrollTop
	$(document).scroll(function(){
		scrollTop=$window.scrollTop();
		//console.log(scrollTop)
  })
  

  $(".close_btn").click(function(){
    event.preventDefault();
  })


	//event

	$li.bind({

		

		//pc
		mouseenter:function(){
			if(winWidth>=inflection){
				$body.addClass('lnb_over');
				$(this).addClass('on');
				$sub.stop().animate({'height':subHeight},speed);
				$bg.stop().animate({'height':subHeight},speed);
	            $(this).children('div').addClass('on');
				
			}
		},
		mouseleave:function(){
			if(winWidth>=inflection){
				$body.removeClass('lnb_over');
				$(this).removeClass('on');
				$(this).children('div').removeClass('on');
				$sub.stop().animate({'height':0},speed);
				$bg.stop().animate({'height':0},speed);
			}
		},

		//mobile
		click:function(){
			if(winWidth<inflection){
				mobileUnbind();
				if(current!=$li.index($(this))){
          $li.removeClass('on'); 
          $(this).removeClass('on');   
					
				}
				current=$li.index($(this));
				$(this).toggleClass('on');              
			}
		}

	});

	$lnb_btn.bind('click',function(){
		$body.toggleClass('lnb_on');
		if($lnb.css("left")!="0px"){
			$lnb.css({'left':'-100%'}).stop().animate({'left':0},speed);
		}else{
			$lnb.css({'left':'0'}).stop().animate({'left':'-100%'},speed);
			$li.removeClass('on');
		}
	});


	//body class
	function setBodyClass(_b){
		winWidth=$window.width();
		if(winWidth>=inflection){
			$body.addClass('pc');
			$body.removeClass('mo');
			$lnb.height('100%');
			subHeight=$sub.find('ul').height();
		}else{
			$body.addClass('mo');
      $body.removeClass('pc');
      subHeight=$sub.find('ul').height();
//			$lnb.height($window.outerHeight()-$lnb.position().top+scrollTop);
		}
		$li.removeClass('on')

	};
	setBodyClass();

	$window.resize(function(){
		setBodyClass();
	})
	
	//포커스 시 메뉴 펼치기
	$li.bind( "focusin", function() {
		if(winWidth>=inflection){
			$body.addClass('lnb_over');
			$(this).addClass('on');
			$sub.stop().animate({'height':subHeight},speed);
			$bg.stop().animate({'height':subHeight},speed);

		}
	});
	
	$li.bind( "focusout", function() {
		if(winWidth>=inflection){
			$body.removeClass('lnb_over');
			$(this).removeClass('on')
			$sub.stop().animate({'height':0},speed);
			$bg.stop().animate({'height':0},speed);

		}
	});

   //이벤트 제어
	function mobileUnbind() {
		$('#lnb > .lnb_list >.depth1 > li > a').attr("href", "#");
		$('#lnb > .lnb_list >.depth1 > m6 > a').attr("href", "#");
	}

});                                   