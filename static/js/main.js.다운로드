
$(document).ready(function(){



 $('.slider').bxSlider({
	pager: true,
	auto: true,
	controls: true,
	autoControls: true,
	speed: 600,
	pause: 5000,
	//mode:'fade'
 onSliderLoad: function(){ $("#edd2").css("visibility", "visible").animate({opacity:1}); }
});
                        


 $('.detail_con').bxSlider({
	pager: true,
	auto: true,
	controls: true,
	autoControls: true,
	speed: 600,
	pause: 5000,
	//mode:'fade'
 onSliderLoad: function(){ $("#edd3").css("visibility", "visible").animate({opacity:1}); }
});
                        

$('.nsmgr_k ul li').on('click', function(){
  $('.nsmgr_k ul li').removeClass('on')
  if(!$(this).hasClass('on')){
    $(this).addClass('on')
  }else{
    $(this).removeClass('on')
  }

});


